<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="1dp"
        >

    <ImageView
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:id="@+id/image1"
        android:layout_marginBottom="4dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/trek"
        android:clickable="true"
        android:onClick="openArticle"
       />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Treking"
            android:textSize="20sp"
            android:id="@+id/textView4"
            android:layout_below="@+id/image1"
            android:layout_marginTop="120dp"
            />

  <ImageView
      android:layout_width="180dp"
      android:layout_height="280dp"
      android:id="@+id/image2"
      android:layout_marginLeft="200dp"
      android:layout_toRightOf="@+id/image1"
      android:background="@drawable/tv"
      android:clickable="true"
      android:onClick="openRightArticle"

      />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fashion"
            android:layout_marginLeft="200dp"
            android:textSize="20sp"
            android:id="@+id/textView5"
            android:layout_below="@+id/image2"
            android:layout_marginTop="280dp"
            />

  <ImageView
      android:layout_width="200dp"
      android:layout_height="130dp"
      android:id="@+id/image3"
      android:layout_marginTop="150dp"
      android:background="@drawable/food"
      android:layout_below="@+id/image1"
      android:clickable="true"
      android:onClick="openArticle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food"
            android:textSize="20sp"
            android:id="@+id/textView6"
            android:layout_below="@+id/image3"
            android:layout_marginTop="280dp"
            />

  <ImageView
      android:layout_width="400dp"
      android:layout_height="200dp"
      android:id="@+id/image4"
      android:layout_marginTop="310dp"
      android:layout_alignParentBottom="true"
      android:background="@drawable/stock"
      android:layout_below="@+id/image3"
      android:clickable="true"
      android:onClick="openRightArticle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Theka"
            android:textSize="20sp"
            android:id="@+id/textView7"
            android:layout_below="@+id/image4"
            android:layout_marginTop="520dp"
            />

  </android.support.v7.widget.CardView>

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageButton1"
        android:background="@android:drawable/btn_star_big_on"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        android:clickable="true"
        android:onClick="openMyLbb"/>

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageButton2"
        android:layout_below="@+id/imageButton1"
        android:background="@android:drawable/ic_menu_revert"
        android:layout_marginTop="110dp"
        android:clickable="true"
        android:onClick="openSuggestFriends"/>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageButton3"
        android:layout_below="@+id/imageButton2"
        android:background="@android:drawable/ic_popup_reminder"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="180dp"
        android:clickable="true"
        android:onClick="openToast"/>




</RelativeLayout>